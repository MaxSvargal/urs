{
  "extends": [
    "tslint:all",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "autoFixOnSave": true,
  "rules": {
    "no-implicit-dependencies": [
      true,
      [
        "~",
        "components"
      ]
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "no-var-keyword": true,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    ],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "import-sources-order": "any",
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "semicolon": [
      false,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "member-variable-declaration"
    ],
    "completed-docs": false,
    "no-default-import": false,
    "no-inferred-empty-object-type": false,
    "strict-boolean-expressions": false,
    "object-literal-sort-keys": [
      true,
      "ignore-case"
    ],
    "file-name-casing": [
      true,
      {
        ".tsx": "pascal-case",
        ".ts": "camel-case"
      }
    ],
    "max-line-length": [
      true,
      160
    ],
    "no-submodule-imports": false,
    "no-non-null-assertion": false,
    "no-magic-numbers": [
      true,
      {
        "allowed-numbers": [
          0,
          1,
          2,
          3
        ],
        "ignore-jsx": true
      }
    ],
    "curly": false,
    "type-literal-delimiter": false,
    "use-default-type-parameter": false,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "no-default-export": false,
    "prefer-const": false,
    "no-object-literal-type-assertion": [
      true,
      {
        "allow-arguments": true
      }
    ]
  },
  "jsRules": {
    "triple-equals": [
      true,
      "allow-null-check"
    ]
  },
  "defaultSeverity": "warning"
}
